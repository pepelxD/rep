{
    "path": {
        "build": {
            "dir": "app",
            "imgDir": "app/img" 
        },
        "src": {
            "dir": "dev",
            "imgDir": "dev/img",
            "scssDir": "dev/scss/**/*.scss",
            "htmlDir": "dev/**/*.html"
        },
        "tasks": {
            "imgsprite": "./tasks/imgsprite",
            "sass": ".tasks/sass",
            "html": "./tasks/html",
            "img": "./tasks/img",
            "font": "./tasks/font",
            "clean": "./tasks/clean"
        }
    },
    "spritesFolder": "sprites",
    "sassOptions": {
        "outputStyle": "expanded",
        "indentType": "tab",
        "indentWidth": 1,
        "includePaths": ["tmp/**/*.scss"]
    }
}